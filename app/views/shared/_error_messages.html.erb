<% if object.errors.any? %>
  <div class="alert alert-block" id="error-explanation">
    <h4><%= pluralize(object.errors.count, "error") %>
      encountered:</h4>
    <p>There were problems with the following fields:</p>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>